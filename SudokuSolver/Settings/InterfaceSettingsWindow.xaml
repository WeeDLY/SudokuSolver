<Window x:Class="SudokuSolver.Settings.InterfaceSettingsWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Interface Settings" x:Name="interfaceSettingsWindow" Height="150" Width="150">
    <Grid x:Name="gridWindow" Loaded="gridWindow_Loaded">
        <ComboBox x:Name="comboLanguage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnApply" Content="Apply" HorizontalAlignment="Left" Margin="33,63,0,0" VerticalAlignment="Top" Width="75" Click="btnApply_Click"/>

    </Grid>
</Window>
